<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.achobeta.infrastructure.dao.UserMapper">

    <resultMap id="UserResultMap" type="com.achobeta.infrastructure.dao.po.UserPO">
        <id column="user_id" property="userId" />
        <result column="user_name" property="userName" />
        <result column="id_card" property="idCard"/>
        <result column="student_id" property="studentId"/>
        <result column="current_status" property="currentStatus"/>
        <result column="entry_time" property="entryTime"/>
        <result column="like_count" property="likeCount"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="getUserByUserId" resultMap="UserResultMap">
        SELECT * FROM user WHERE user_id = #{userId}
    </select>
</mapper>