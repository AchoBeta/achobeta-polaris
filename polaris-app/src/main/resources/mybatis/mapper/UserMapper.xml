<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.achobeta.infrastructure.dao.UserMapper">

    <resultMap id="UserResultMap" type="com.achobeta.infrastructure.dao.po.UserPO">
        <id column="user_id" property="userId" />
        <result column="user_name" property="userName" />
        <result column="id_card" property="idCard"/>
        <result column="student_id" property="studentId"/>
        <result column="current_status" property="currentStatus"/>
        <result column="entry_time" property="entryTime"/>
        <result column="like_count" property="likeCount"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="listMemberByTeamId" resultMap="UserResultMap">
        select id,user_id,user_name,id_card,student_id,current_status,
                entry_time,like_count,create_by,create_time,update_by,
                update_time ,phone,gender,email,grade,major,experience
        from user as t1, member as t2
        where t1.user_id=t2.user_id
                and t2.team_id = #{teamId}
                and t1.id > #{lastId}
                and t1.is_deleted = 0
                and t2.is_deleted = 0
        order by t1.id
        limit #{limit}
    </select>
</mapper>